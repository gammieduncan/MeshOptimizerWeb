# Production Environment Template
# Copy this file to .env on your production server and fill in the values

# Database
# For SQLite:
# DATABASE_URL=sqlite:///./data/poly_slimmer.db
# For PostgreSQL:
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Authentication (use a strong, randomly generated key)
JWT_SECRET=replace-with-a-strong-random-key

# Backblaze B2 Storage
B2_KEY_ID=your_b2_key_id_here
B2_KEY=your_b2_application_key_here
B2_BUCKET=your_b2_bucket_name

# Redis for background job processing
REDIS_URL=redis://redis-hostname:6379

# Path to gltfpack executable (typically installed via Docker)
GLTFPACK_PATH=/usr/local/bin/gltfpack

# Stripe Payments
STRIPE_API_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret 