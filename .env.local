# Local Development Environment
# Copy this file to .env for local development

# Database
DATABASE_URL=sqlite:///./poly_slimmer.db

# Authentication (use a simple key for development)
JWT_SECRET=local-development-secret-key

# Local file storage (instead of B2)
# Leave B2 credentials empty to use local file storage
B2_KEY_ID=
B2_KEY=
B2_BUCKET=poly-slimmer

# Set this to your local Redis instance if you want to test background jobs
# Comment out if you don't need Redis for local testing
REDIS_URL=redis://localhost:6379

# Path to gltfpack executable
# Install via: brew install meshoptimizer (on macOS)
GLTFPACK_PATH=/usr/local/bin/gltfpack

# Stripe keys - leave empty for local development unless testing payments
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET= 